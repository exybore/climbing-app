.card__group
  margin: 16px
  padding: 7px
  border-radius: 12px

  background-color: var(--v-sheets-base)

  hr
    margin-left: 5px !important
    margin-right: -7px

.list_group + .list__group
  margin-top: 16px

.v-list .v-divider
  margin-left: 16px

.card__header
  font-size: 13px
  letter-spacing: .0333333333em
  line-height: 1.25rem
  text-transform: uppercase
  color: #616161

.card__description
  margin-top: 9px
  margin-left: 12px
  font-size: 12.3px
  color: var(--v-list-description-base)

.card
  padding: 0
  border-radius: 0
  background: none !important
  &.card--top
    border-top: 1px solid hsla(0, 0%, 100%, .12)
  &.card--bottom
    border-bottom: 1px solid hsla(0, 0%, 100%, .12)
  &.card--extendable .v-list-item .row
    align-items: start !important

  &.theme--light
    .v-list-item__icon i
      color: #c4c4c6
    .action__text
    input::placeholder
    textarea::placeholder
      color: #8a8a8d
  &.theme--dark
    .v-list-item__icon i
      color: #5a5a5e
    .action__text
    input::placeholder
    textarea::placeholder
      color: #98989e

  .subtitle-1
    padding-top: 10px
    padding-bottom: 10px
    min-height: 20px

  .v-list-item
    padding-left: 6px
    padding-right: 6px
    .row .v-input .v-input__control .v-input__slot
      padding: 0

  textarea
    padding-top: 2.2px
